class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        sort(nums.begin(), nums.end());

        int n = nums.size();
        int prev = nums[0] - k + 1;
        int ans = 1;

        for (int i = 1; i < n; i++) {
            int x = nums[i] - k;
            int y = nums[i] + k;

            if (prev < x) {
                prev = x;
            }
            if (prev >= x && prev <= y) {
                prev++;
                ans++;
            }
        }

        return ans;
    }
};
