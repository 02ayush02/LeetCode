class Solution {
public:
    bool isPowerOfFour(int n) {
        if (n <= 0) return false;
        // for (int i = 0; pow(4, i) <= n; i++) {
        //     if (pow(4, i) == n) {
        //         return true;
        //     }
        // }
        int num = 1;
        for (int i = 0; i < 31; i += 2) {
            if ((num << i) == n) {
                return true;
            }
        }
        return false;
    }
};
