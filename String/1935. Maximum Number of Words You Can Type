class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {

        unordered_map<char, int> mpp;
        for (auto it : brokenLetters) {
            mpp[it] = 1;
        }

        stringstream ss(text);
        string a;
        int cnt = 0;
        while (ss >> a) {
            cnt++;
            for (auto it : a) {
                if (mpp[it] != 0) {
                    cnt--;
                    break;
                }
            }
        }

        return cnt;
    }
};
