class Solution {
public:
    int findMinArrowShots(vector<vector<int>>& points) {
        sort(points.begin(), points.end());

        int left = points[0][0];
        int right = points[0][1];
        int n = points.size();
        int cnt = 1;
        
        for (int i = 1; i < n; i++) {
            if (points[i][0] <= right) {
                left = max(left, points[i][0]);
                right = min(right, points[i][1]);
            } else {
                cnt++;
                left = points[i][0];
                right = points[i][1];
            }
        }
        return cnt;
    }
};
