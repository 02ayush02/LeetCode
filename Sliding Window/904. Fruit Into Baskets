class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        unordered_map<int, int> mpp;

        int ans = 0;
        int i = 0, j = 0;
        int n = fruits.size();
        while(j < n) {
            mpp[fruits[j]]++;

            while(mpp.size() > 2) {
                mpp[fruits[i]]--;
                if(mpp[fruits[i]] == 0) {
                    mpp.erase(fruits[i]);
                }
                i++;
            }
            if (mpp.size() <= 2) {
                int curr = 0;
                for (auto it : mpp) {
                    curr += it.second;
                }
                ans = max(ans, curr);
            }
            j++;
        }

        return ans;
    }
};
